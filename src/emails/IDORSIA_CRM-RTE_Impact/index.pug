extends ../../layout/main.pug

include global.pug

block conditionals
block styles
  style(type="text/css")
    include:scss(outputStyle="compressed") ./styles/inline.scss
    include:clean-css ./styles/index.css
  <!--[if mso]>
    style(type="text/css")
      include:clean-css ./styles/outlook.css
  <![endif]-->
block content
  //- body(style="background-color: #eeeeee;" bgcolor="#eeeeee")

  //HIDDEN PREHEADER TEXT
  div(style=`display: none!important;mso-hide:all; font-size: 1px; color: #fefefe; line-height: 1px; font-family: ${fallback}; max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden;`).
    Patients are impacted by symptoms both night &amp; day

  // CONTAINER TABLE
  table(width="100%")&attributes(tableAtt)
    tr
      td(align="center" style=`background-color: ${bg_color};` bgcolor=bg_color)
        //  WRAPPER TABLE
        table(align="center" width=max_w class="mobile-table")&attributes(tableAtt)
          tr
            td
              include components/phsln.pug
              include components/header.pug
              include components/intro.pug
              include components/content.pug
              include components/references.pug
              include components/signoff.pug
              include components/footer.pug
